extends ../layouts/layout.pug

block content
	div.container.mt-5
		h1.h1 Login	
		if(errors)
			each error in errors
				.alert.alert-dark(role='alert')=error
		form(action="/auth/login", method="POST")
			.form-group
				label(for='email') Email address
				input#email.form-control(placeholder='Enter email', name='email', value=values?values.name:'')
			.form-group
				label(for='password') Email passwork
				input#password.form-control(placeholder='Enter passwork', name='passwork', value=values?values.phone:'', type='password')
			button.btn.btn-outline-primary Login